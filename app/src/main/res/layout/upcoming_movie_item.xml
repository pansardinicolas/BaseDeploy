<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
                name="movie"
                type="teste.nicolas.basedeploy.model.data.dto.local.UpcomingMovie"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="@{movie.title}"
                tools:text="Toy Story"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="@{String.valueOf(movie.voteAverage)}"
                tools:text="95"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_voteAverage"
                app:layout_constraintStart_toEndOf="@+id/tv_title"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="@{movie.releaseDate}"
                tools:text="11-04-2019"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_releaseDate"
                app:layout_constraintStart_toEndOf="@+id/tv_voteAverage"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="@{movie.posterPath}"
                tools:text="poster-path"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_posterPath"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_releaseDate"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>